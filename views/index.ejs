<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Manage Toys</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <style rel="stylesheet">
      body {
        background-image: radial-gradient(
          rgba(255, 205, 205, 0.681),
          rgba(255, 255, 175, 0.785),
          rgba(228, 255, 228, 0.774)
        );
      }
      .col-4 {
        height: 550px;
      }
      .col-7 {
        height: 550px;
        overflow-y: scroll;
        scrollbar-color: rebeccapurple green;
        scrollbar-width: thin;
      }
    </style>
  </head>

  <body>
    <div class="container toy my-5">
      <h1 class="text-info text-center">Toy manager</h1>
      <div class="row">
        <div class="col-4 border border-success px-5 py-5">
          <h3>CREATE</h3>
          <!-- (1): CREATE Task -->
          <!-- -->
          <form action="/quotes" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Toy Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Please enter toy name..."
              />
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea
                class="form-control"
                id="description"
                name="description"
                rows="3"
              ></textarea>
            </div>

            <div class="mb-3">
              <label for="price" class="form-label">Price</label>
              <input
                type="number"
                class="form-control"
                id="price"
                name="price"
                placeholder="Please enter toy name..."
                min="10000"
                max="5000000"
                step="1000"
              />
            </div>

            <!-- <input type="text" placeholder="description" name="description" /> -->
            <button type="submit" class="btn btn-success">Submit</button>
          </form>
          <!-- -->
        </div>
        <div class="col-1"></div>
        <!-- (2) READ Task -->
        <div class="col-7 border border-info px-5 py-5">
          <h3>READ</h3>
          <ul class="quotes">
            <!-- Loop through quotes -->
            <% for(var i = 0; i < quotes.length; i++) {%>
            <li class="quote">
              <!-- Output name from the iterated quote object -->
              <div>Toy Name: <span><%= quotes[i].name %></span></div>
              <div>Description: <span><%= quotes[i].description %></span></div>
              <!-- Output quote from the iterated quote object -->
              <div>Price: <span><%= quotes[i].price %></span></div>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
